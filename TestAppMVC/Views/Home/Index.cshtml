        //    var date = document.getElementById("TravelDate").value;
        //    document.getElementById("TableDate").value = date;
        //        }

        //document.getElementById("TableDate").innerHTML = datetd;

    function DataForTable() {

        var datee = document.getElementById("TravelDate").value;
        //console.log(datee);
        document.getElementById("TableDate").innerHTML = datee;
       
        document.getElementById('NumberOfPax').innerHTML = document.getElementById('Passanger_Total').value;
        
    }

    </script>
</body>

</html>